}
<!DOCTYPE html>

<html>
<head>

    <title>Super La familia</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="assets/img/apple-icon.png">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">


    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/templatemo.css" rel="stylesheet" />
    <link href="~/Content/assets/css/custom.css" rel="stylesheet" />

    <!-- Load fonts style after rendering the layout styles -->


    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link href="~/Content/assets/css/fontawesome.min.css" rel="stylesheet" />
    <!--

    TemplateMo 559 Zay Shop

    https://templatemo.com/tm-559-zay-shop

    -->
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light shadow">
        <div class="container d-flex justify-content-between align-items-center">

            <a class="navbar-brand text-success logo h2 align-self-center" href="index.html">
                Super La Familia
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between" id="templatemo_main_nav">
                <div class="flex-fill">
                    <ul class="nav navbar-nav d-flex justify-content-between mx-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Inicio", "Home")">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Home")">Acerca de</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Usuarios")">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contáctenos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Registro", "Usuarios")">Registro</a>
                        </li>
                    </ul>
                </div>
            </div>





        </div>
    </nav>
    <!-- Close Header -->
    <!-- Header -->
    <div class="page-heading header-text">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!--Título de la sección-->
                    <br />
                    <h4></h4>
                    <br />
                </div>
            </div>
        </div>
    </div>


    <!-- Form de iniciar sesion -->

    <div class="container">
        <div class="row">
            <div class="row text-center pt-3">
                <div class="col-lg-6 m-auto">
                    <br />
                    <h1 class="h1">Inicie Sesión para poder continuar</h1>
                </div>
            </div>

            <br />

            <div class="col-md-12">
                <form id="login" action="InicioSesion" controller="Usuarios" method="get" class="system-forms">
                    <br />

                    <!--Para digitar el usuario-->
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <fieldset>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Usuario<span class="required"></span></label>
                                    <div class="col-md-6 col-sm-6">
                                        <input name="Username" type="text" class="form-control" id="Username" placeholder="Ej: JuanMora" required="">
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>

                    <!--Para digitar la contraseña-->
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <fieldset>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Contraseña<span class="required"></span></label>
                                    <div class="col-md-6 col-sm-6">
                                        <input name="Contraseña" type="password" class="form-control" placeholder="*******" id="Contraseña" required="">
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>

                    <br />


                    <!--Botones de ingresar y limpiar campos-->
                    <div class="col-lg-12">
                        <fieldset class="text-center">
                            <button type="submit" class="btn btn-success">Ingresar</button>
                            <button type='reset' class="btn btn-secondary">Limpiar campos</button>
                        </fieldset>

                    </div>
                </form>
            </div>
        </div>
    </div>




</body>
</html>