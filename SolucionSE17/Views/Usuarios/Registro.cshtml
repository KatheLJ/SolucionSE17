
@{
    ViewBag.Title = "Registro";
    List<SelectListItem> items = (List<SelectListItem>)ViewData["Rol"];
}



<div class="text-center">
    <div class="section-heading">
        <br />
        <h2 class="h2 text-center">Registrese para continuar</h2>
    </div>
</div>

<br />
<br />


<div class="">
    <div class="text-center">
        <form id="registro" action="RegistroUsuario" controller="Usuario" method="post">
            <div class="row">
                <fieldset>
                    <div class="">
                        <label class="">Cedula</label>
                        <div class="">
                            <input class="" type="number" id="ID_Usuario" name="ID_Usuario" required="" />
                        </div>
                    </div>
                </fieldset>

                <br />

                <fieldset>
                    <div class="">
                        <label class="">Nombre completo</label>
                        <div class="">
                            <input class="" type="text" id="Nombre_Usuario" name="Nombre_Usuario" required="" />
                        </div>
                    </div>
                </fieldset>

                <br />


                <fieldset>
                    <div class="">
                        <label class="">Rol</label>
                        <div class="">
                            @Html.DropDownList("ID_Rol", items, "Seleccione el rol", new { required = "required" })
                        </div>
                    </div>
                </fieldset>

                <br />


               
                <fieldset>
                    <div class="">
                        <label class="">Teléfono</label>
                        <div class="">
                            <input class="" type="number" id="Telefono" name="Telefono" required="" />
                        </div>
                    </div>
                </fieldset>

                <br />

                <fieldset>
                    <div class="form-group">
                        <label class="">Correo Electrónico</label>
                        <div class="">
                            <input class="" type="text" id="Correo" name="Correo" required="" />
                        </div>
                    </div>
                </fieldset>

                <br />

                

                <fieldset>
                    <div class="">
                        <label class="">Usuario</label>
                        <div class="">
                            <input class="" type="text" id="Usuario" name="Usuario" required="" />
                        </div>
                    </div>
                </fieldset>

                <br />

                <fieldset>
                    <div class="">
                        <label class="">Contraseña</label>
                        <div class="">
                            <input class="" type="password" id="Contraseña" name="Contraseña" required="" />
                        </div>
                    </div>
                </fieldset>

                <br />


                <div class="">
                    <br />
                    <button type='submit' class="btn btn-success">Registrar</button> | 
                    <button type='reset' class="btn btn-secondary">Borrar</button>
                </div>

                <br />


            </div>
        </form>
    </div>
</div>


