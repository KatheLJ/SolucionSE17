@model IEnumerable<SolucionSE17DAL.Modelo.Producto>
@{
    ViewBag.Title = "ListadodeProductos";
}




<div class="row text-center pt-3">
    <div class="col-lg-6 m-auto">
        <br />
        <h2 class="h2">Listado de Productos disponibles en el sistema</h2>
    </div>
</div>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Producto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_producto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.Descripcion)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado_productos.Nombre_estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_iNgreso)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_productos.Nombre_estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_iNgreso)
            </td>
            <td>
                @Html.ActionLink("Editar", "ActualizarProducto", new { ID_Producto = item.ID_Producto }, new { @class = "btn btn-success btn-sm" }) |
                @Html.ActionLink("Ver", "VerProducto", new { ID_Producto = item.ID_Producto }, new { @class = "btn btn-success btn-sm" }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { ID_Producto = item.ID_Producto }, new { @class = "btn btn-success btn-sm" })
            </td>
        </tr>
    }

</table>


<p>
    @Html.ActionLink("Crear Nuevo", "CrearProducto", new { }, new { @class = "btn btn-secondary btn-sm" })
</p>
