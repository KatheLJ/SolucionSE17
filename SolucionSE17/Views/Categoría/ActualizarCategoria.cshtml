@model SolucionSE17DAL.Modelo.Categoria
@{
    ViewBag.Title = "ActualizarCategoria";
}





<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br />
                <h2 class="h2 text-center">Modificar Categoría</h2>
            </div>
        </div>
    </div>
</div>

<br />


@using (Html.BeginForm("ActualizarCategorias", "Categoría", FormMethod.Get))
{
    <div class="single-services">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class="section-heading">
                        </div>
                    </div>
                    <div class="contact-form">
                        <div class="row">



                            <div class="form-group">
                                @Html.LabelFor(model => model.ID_Categoria, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ID_Categoria, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ID_Categoria, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <br />
                                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            
                            <div class="col-lg-10 col-md-12 col-sm-12">
                                <br />
                                <input type="submit" id="btn-Update" value="Guardar Cambios" class="btn btn-secondary" />
                                @Html.ActionLink("Regresar", "ListadodeProductos", "Productos", new { @class = "btn btn-success" })
                                <br>


                            </div>
                            <br><br><br><br>
                        </div>
                    </div>
                    <br><br><br><br>
                </div>
            </div>
        </div>
    </div>
}
